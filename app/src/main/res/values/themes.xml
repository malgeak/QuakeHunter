<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuakeHunter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.QuakeHunter</item>
    </style>

    <style name="CredentialsScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="background">@color/black_20</item>
    </style>

    <style name="SplashScreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuakeHunter.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textSize">@dimen/title_text_size_md</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">@dimen/spacing_md</item>
        <item name="cornerRadius">@dimen/spacing_sm</item>
    </style>
</resources>